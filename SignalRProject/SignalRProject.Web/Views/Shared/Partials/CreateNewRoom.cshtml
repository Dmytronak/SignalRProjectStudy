<div class="modal fade" id="addRoomModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Create Room</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="createRoomForm" asp-controller="Chat" asp-action="CreateRoom" enctype="multipart/form-data">

                    <div class="form-group">
                        <label>Room name</label>
                        <input name="Name" class="form-control" placeholder="Name" type="text" id="roomNameValue">
                    </div>

                    <div class="form-group">
                        <label>Image</label>
                        <input name="Photo" class="form-control" type="file" onchange="loadFile(event)">
                        <img class="output-image-resize" id="output" />
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-success btn-block"> Submit </button>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>